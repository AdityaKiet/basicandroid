<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background4"
    android:gravity="start"
    android:orientation="vertical" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >
         
        <TextView
        	android:id="@+id/tv"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:layout_marginTop="5dp"
        	android:text="Second Inning"
        	android:textSize="40sp"
        	android:textStyle="bold" />
        
		<LinearLayout
        	android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
        
    		    <TextView
    		        android:id="@+id/tv"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:layout_marginTop="1dp"
    		        android:layout_weight="0.06"
    		        android:text="Score - "
    		        android:textSize="35sp"
    		        android:textStyle="bold" />
    		    
    		    <TextView
         	 		android:id="@+id/score"
	             	android:layout_width="wrap_content"
    	         	android:layout_height="wrap_content"
    	         	android:layout_marginTop="1dp"
        	     	android:layout_weight="0.53"
            	 	android:text="0/0"
             		android:textSize="35sp"
             		android:textStyle="bold" />
    		    <TextView
         	 		android:id="@+id/overlimit"
	             	android:layout_width="wrap_content"
    	         	android:layout_height="wrap_content"
    	         	android:layout_marginTop="1dp"
        	     	android:layout_weight="0.53"
            	 	android:text="(0)"
             		android:textSize="35sp"
             		android:textStyle="bold" />    		    
		</LinearLayout>
		<LinearLayout
        		android:layout_width="match_parent"
	        	android:layout_height="wrap_content" >
        
    		    <TextView
    		        android:id="@+id/tv"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:layout_marginTop="0dp"
    		        android:layout_weight="0.06"
    		        android:text="  Run Rate - "
    		        android:textSize="20sp"
    		        android:textStyle="bold" />
    		    <TextView
         	 		android:id="@+id/runrate"
	             	android:layout_width="wrap_content"
    	         	android:layout_height="wrap_content"
    	         	android:layout_marginTop="0dp"
        	     	android:layout_weight="0.53"
            	 	android:text="0.0"
             		android:textSize="20sp"
             		android:textStyle="bold" />
    		    <TextView
         	 		android:id="@+id/tv"
	             	android:layout_width="wrap_content"
    	         	android:layout_height="wrap_content"
    	         	android:layout_marginTop="0dp"
        	     	android:layout_weight="0.53"
            	 	android:text="Overs - "
             		android:textSize="20sp"
             		android:textStyle="bold" />    		
    		    <TextView
         	 		android:id="@+id/overs"
	             	android:layout_width="wrap_content"
    	         	android:layout_height="wrap_content"
    	         	android:layout_marginTop="0dp"
        	     	android:layout_weight="0.53"
            	 	android:text="0.0"
             		android:textSize="20sp"
             		android:textStyle="bold" />             		    
     	</LinearLayout> 
     	
    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >      	 
     	
    		    <TextView
    		        android:id="@+id/runstowin"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:layout_marginTop="0dp"
    		        android:layout_weight="0.06"
    		        android:text="(Need runs to win from balls)"
    		        android:textSize="20sp"
    		        android:textStyle="bold" />
    	</LinearLayout>

    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >    		    
  
    		    <TextView
    		        android:id="@+id/reqrate"
    		        android:layout_width="wrap_content"
    		        android:layout_height="wrap_content"
    		        android:layout_marginTop="0dp"
    		        android:layout_weight="0.06"
    		        android:text="Req Run Rate - 0.00"
    		        android:textSize="20sp"
    		        android:textStyle="bold" />    		        
    	</LinearLayout>  		    		    

    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
    	    	android:id="@+id/oneadd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ 1"
    	    	android:textSize="20sp" />
	    	<Button
    		    android:id="@+id/onesubtract"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - 1"
    	    	android:textSize="20sp" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
	    	    android:id="@+id/twoadd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ 2"
	    	    android:textSize="20sp" />
    		<Button
	    	    android:id="@+id/twosubtract"
	    	    android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - 2"
    	    	android:textSize="20sp" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
	    	    android:id="@+id/fouradd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ 4"
    	    	android:textSize="20sp" />
    		<Button
    	    	android:id="@+id/foursubtract"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - 4"
    	    	android:textSize="20sp" />
		</LinearLayout>	
		<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
	    	    android:id="@+id/sixadd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ 6"
    	    	android:textSize="20sp" />
	    	<Button
    	    	android:id="@+id/sixsubtract"
    	    	android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - 6"
    	    	android:textSize="20sp" />
		</LinearLayout>
		<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
	    	    android:id="@+id/balladd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ ball"
    	    	android:textSize="20sp" />
    		<Button
    	    	android:id="@+id/ballsubtract"
	    	    android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - ball"
    	    	android:textSize="20sp" />
		</LinearLayout>	
		<LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content" >	
    		<Button
	    	    android:id="@+id/wicketadd"
    	    	android:layout_width="200dp"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text="+ wicket"
    	    	android:textSize="20sp" />
    		<Button
    	    	android:id="@+id/wicketsubtract"
	    	    android:layout_width="match_parent"
    	    	android:layout_height="40dp"
    	    	android:layout_marginTop="5dp"
    	    	android:text=" - wicket"
    	    	android:textSize="20sp" />
		</LinearLayout>		
	
	</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="top"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Update Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#A2F368"
        android:textSize="25sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/idDisplay"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <EditText
        android:id="@+id/nameupdate"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:editable="false"
        android:hint="Person Name"
        android:maxLength="10"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/takemoneyupdate"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="Taking Amount"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/givemoneyupdate"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="Giving Amount"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/submitupdate"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/login_button_bg"
        android:text="Submit" />

    <Button
        android:id="@+id/cancelupdate"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/login_button_bg"
        android:text="Cancel" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cricketscorebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cricketscorebook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cricketscorebook.FirstInning"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.cricketscorebook.FirstInning" />

                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cricketscorebook.SecondInning"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.cricketscorebook.SecondInning" />

                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cricketscorebook.FirstInningscorebook"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.cricketscorebook.FirstInningscorebook" />

                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cricketscorebook.SecondInningscorebook"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.cricketscorebook.SecondInningscorebook" />

                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
    </application>

</manifest>